<h1>New transaction</h1>

<!-- IMPROVE:
One number field to mark as number
One date field - try and find a drop-down calendar? -->

<div class="grid">
  <form action="/transactions" method="POST">

    <div class="grid-row grid-row-sm">
      <div class="cell">
        <label for="date-field">Date</label>
      </div>
      <div class="cell f3">
        <input type="text" name="the_date" id="date-field" />
      </div>
    </div>

    <div class="grid-row grid-row-sm">
      <div class="cell">
        <label for="description-field">Description</label>
      </div>
      <div class="cell f3">
        <input type="text" name="description" id="description-field" />
      </div>
    </div>

    <div class="grid-row grid-row-sm">
      <div class="cell">
        <label for="value-field">Value</label>
      </div>
      <div class="cell f3">
        <input type="text" name="value" id="value-field" />
      </div>
    </div>

    <div class="grid-row grid-row-sm">
      <div class="cell">
        <label for="category-select">Category</label>
      </div>
      <div class="cell f3">
        <select id="category-select" name="category_id">
          <% for category in @categories do %>
            <option value="<%= category.id %>"><%= category.name %></option>
          <% end %>
        </select>
      </div>
    </div>

    <div class="grid-row grid-row-sm">
      <div class="cell">
        <input type="submit" value="Add Transaction" />
      </div>
    </div>

  </form>
</div>
