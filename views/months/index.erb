<div class="grid">
  <div class="grid-row grid-row-sm grid-row-title">
    <div class="cell cell--title f20">Show Months</div>
    <div class="cell f05"><form action="/months/new" method="GET"><input type="submit" value="New Month" /></form></div>
  </div>
  <div class="grid-row grid-row-sm grid-row-head">
    <div class="cell cell-head f07"></div>
    <div class="cell cell-head cell--backg-2">First Day</div>
    <div class="cell cell-head cell--backg-1">Month Name</div>
  </div>
  <% for month in @months %>
    <div class="grid-row grid-row-sm grid-row-bord-top">
      <div class="cell cell--backg-1 f07"><form action="/months/<%= month.id %>" method="GET"><input type="submit" value="show" /></form></div>
      <div class="cell cell--backg-2"><%= month.first_day_of_month %></div>
      <div class="cell cell--backg-1"><%= month.id %></div>   <!--IMPROVE ME-->
    </div>
  <% end %>
</div>
